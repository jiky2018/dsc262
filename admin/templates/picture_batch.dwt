		goods_div.id = 'goods_' + goods_id;
		goods_div.innerHTML = '<p class="goods_item_p"><span>' + goods_name + '</span><img alt="{$lang.drop}" onclick="del_search_goods(\'' + 'goods_' + goods_id + '\');" src="images/no.gif"/>'+'<input type="hidden" name="multi_goods_id[]" value="' + goods_id + '"></p>';
