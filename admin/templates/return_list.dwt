                                  <td><div class="tDiv"><p>{$lang.return_sn}：{$order.return_sn}</p><p>{$lang.order_sn}：{$order.order_sn}{if $order.extension_code eq "group_buy"}{/if}</p></div></td>
								  <td>
                                  	<div class="tDiv">
									{if $order.order_child eq 0}
										{if $order.user_name}
											<font class="red">{$order.user_name}</font>
										{else}
											<font class="blue">{$lang.self}</font>
										{/if}
									{else}
									<font class="pink3">{$lang.to_order_sn2}</font>
									{/if}
                                    </div>
								  </td>
								  <td><div class="tDiv">{if $order.return_type eq 0}{$lang.repair}{elseif $order.return_type eq 1}{$lang.return_goods}{elseif $order.return_type eq 2}{$lang.change}{elseif $order.return_type eq 3}{$lang.only_return_money}{/if}</div></td>
								  <td>
                                    <div class="tDiv">
                                        <p>{$lang.applicant}：{$order.buyer}</p>
                                        <p>{$lang.apply_time}：{$order.apply_time}</p>
                                    </div>
                                  </td>
								  <td>
                                  	<div class="tDiv">
                                    	{if $order.discount_amount > 0}
                                        + {$order.should_return}【{$lang.goods_alt}】
                                        <br/>
                                        - {$order.discount_amount}【{$lang.discount}】
                                        <br/>
                                        =
                                        {/if}
                                  		{$order.formated_should_return}
                                    </div>
                                  </td>
								  <td><div class="tDiv">{$order.actual_return}{if $order.return_shipping_fee > 0 && $order.return_pay_status eq 1}<br/><em class="org2">({$lang.freight_charge})</em>{/if}</div></td>
								  <td><div class="tDiv">{$order.return_number}</div></td>
								  <td><div class="tDiv">{$order.addressee|escape}</a>{if $order.phone} [TEL: {$order.phone|escape}]{/if} <br />{$order.address_detail}</div></td>
								  <td><div class="tDiv">{if $order.refund_type eq 1}{$lang.return_balance}{elseif $order.refund_type eq 2}{$lang.return_user_line}{/if}</div></td>
								  <td><div class="tDiv">{if $order.return_status lt 0}{$lang.only_return_money}{else}{$lang.rf[$order.return_status]}{/if}-<font class="red">{$lang.ff[$order.refound_status]}</font></div></td>
								  <td class="handle">
									  <div class="tDiv a2">
										  <a href="order.php?act=return_info&ret_id={$order.ret_id}&rec_id={$order.rec_id}" title="{$lang.view}" class="btn_see"><i class="sc_icon sc_icon_see"></i>{$lang.view}</a> 
										  {if $order.can_remove}
										  <a href="javascript:;" onclick="listTable.remove({$order.order_id}, remove_confirm, 'remove_order')" title="{$lang.remove}" class="btn_trash"><i class="icon icon-edit"></i>{$lang.drop}</a></span>
										  {/if}
									  </div>
								   </td>
								</tr>
								{foreachelse}
								<tr><td class="no-records" align="center" colspan="15">{$lang.no_records}</td></tr>
								{/foreach}
                            </tbody>
                            <tfoot>
                            	<tr>
                                    <td colspan="15">
                                    	<div class="list-page">
                                            {include file="library/page.lbi"}
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
						{if $full_page}
                    </div>
                    </form>
                </div>
            </div>
            <div class="gj_search">
                <div class="search-gao-list" id="searchBarOpen">
                    <i class="icon icon-zoom-in"></i>{$lang.advanced_search}
                </div>
                <div class="search-gao-bar">
                    <div class="handle-btn" id="searchBarClose"><i class="icon icon-zoom-out"></i>{$lang.pack_up}</div>
                    <div class="title"><h3>{$lang.advanced_search}</h3></div>
                    <form method="get" name="formSearch_senior" action="javascript:searchReturnOrder()">
                        <div class="searchContent">
                            <div class="layout-box">
                                <dl>
                                    <dt>{$lang.order_sn}</dt>
                                    <dd><input type="text" value="" name="order_sn" class="s-input-txt" autocomplete="off" /></dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.return_sn}</dt>
                                    <dd><input type="text" value="" name="return_sn" class="s-input-txt" autocomplete="off" /></dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.consignee|escape}</dt>
                                    <dd><input type="text" value="" name="consignee" class="s-input-txt" autocomplete="off" /></dd>
                                </dl>
                                <dl>
                                    <dt>{$lang.all_status}</dt>
                                    <dd>
                                        <div  class="select_w145 imitate_select">
                                            <div class="cite">{$lang.select_please}</div>
                                            <ul>
                                               <li><a href="javascript:;" data-value="-1">{$lang.select_please}</a></li>
                                               <li><a href="javascript:;" data-value="0">{$lang.already_repair}</a></li>
                                               <li><a href="javascript:;" data-value="1">{$lang.refunded}</a></li>
                                               <li><a href="javascript:;" data-value="2">{$lang.already_change}</a></li>
                                            </ul>
                                            <input name="return_type" type="hidden" value="-1">
                                        </div>
                                    </dd>
                                </dl>
                                {if $common_tabs.info}
