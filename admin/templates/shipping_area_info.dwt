    <script type="text/javascript" src="js/region.js"></script>
    <script type="text/javascript">
	//商品搜索下拉
    $.divselect("#country_select","#country_select_val");
    $.divselect("#city_select","#city_select_val");
    $.divselect("#county_select","#county_select_val");

    $("input[name='checkboxAll']").click(function(){
		if($(this).is(":checked")){
			$(".region_items").find("input[name='region_name']").prop("checked",true);
		}else{
			$(".region_items").find("input[name='region_name']").prop("checked",false);
		}
    });
                
	/*地区搜索 实现多选*/             
	$("a[ectype='areaSearch']").on("click",function(){
		var selcountry = $('#selcountry');
		var selProvince = $('#selProvinces');
		var selCity     = $('#selCities');
		var selDistrict     = $('#selDistricts');
		var regionCell  = $('#regionCell');
		
		var regionId = 0;
		var regionType = '';
		
		if(selDistrict.val()> 0){
			regionId = selDistrict.val();
			regionType = 4;
		}else{
			if(selCity.val() > 0){
				regionId = selCity.val();
				regionType = 3;
			}else{
				if(selProvince.val() > 0){
					regionId = selProvince.val();
					regionType = 2;
				}else{
					if(selcountry.val() > 0){
						regionId = selcountry.val();
						regionType = 1;
					}else{
						regionId = 0;
						regionType = "";
					}
				}
			}
		}
		
		if(regionId == 0){
			alert("{$lang.select_region}");
		}else{
			$.jqueryAjax('region.php', 'type='+regionType+'&parent='+regionId+"&shipping=1", function(data){
				regionCell.html(data.content);
			});
		}
	});
 
	/*添加配送地址*/
	$("a[ectype='shiping_add']").on("click",function(){
		var html = $("#shipping_region");
		var val = '';
		
		$('#regionCell').find("input[name='region_name']:checked").each(function(){
			var _this = $(this);
			var exists = false;
			html.find("input:hidden").each(function(){
				if($(this).val() == _this.val()){
					exists = true;
					return false;
				}
			});
			if(exists == false){
				html.append('<span>'+_this.attr("data-region")+'<a href="javascript:void(0);" class="delete" onclick="remove_rigion(this)"></a><input type="hidden" name="regions[]" value="'+_this.val()+'"/></span>');
			}
		});
	})

	function remove_rigion(i){
	  $(i).parents('span').remove();
	}
  
	/**
	* 配送费用计算方式
	*/
	function compute_mode(shipping_code,mode)
	{
		var base_fee  = $("#base_fee");
		var step_fee  = $("#step_fee");
		var item_fee  = $("#item_fee");
		if(shipping_code == 'post_mail' || shipping_code == 'post_express')
		{
		 var step_fee1  = $("#step_fee1");
		}
	
		if(mode == 'number')
		{
		  item_fee.css("display","");
		  base_fee.css("display","none");
		  step_fee.css("display","none");
		  if(shipping_code == 'post_mail' || shipping_code == 'post_express')
		  {
		   step_fee1.css("display","none");
		  }
		}
		else
		{
		  item_fee.css("display","none");
		  base_fee.css("display","");
		  step_fee.css("display","");
		  if(shipping_code == 'post_mail' || shipping_code == 'post_express')
		  {
		   step_fee1.css("display","");
		  }
		}
	}
	
	/**
	*	继续添加
	*/
	function continueAdd(obj){
		//_div.find(".since_delete").remove();
			var _div= '<div class="label_list_item"><a href="javascript:void(0);" class="since_delete" onclick="removePointer(this)">{$lang.drop}</a><div class="item_item"><div class="label_item"><span class="require-field">*</span>{$lang.since_name}：</div><div class="label_item_value"><input type="text" name="point_name[]" class="text" value="" autocomplete="off"></div></div><div class="item_item"><div class="label_item"><span class="require-field">*</span>{$lang.since_contacts}：</div><div class="label_item_value"><input type="text" name="user_name[]" class="text" value="" autocomplete="off"></div></div><div class="item_item"><div class="label_item"><span class="require-field">*</span>{$lang.since_tel}：</div><div class="label_item_value"><input type="text" name="mobile[]" class="text" value="" autocomplete="off"></div></div><div class="item_item"><div class="label_item">{$lang.since_map_image}：</div><div class="label_item_value"><div class="type-file-box"> <input type="button" name="button" id="button" class="type-file-button" value=""><input type="file" class="type-file-file" id="legal_person_fileImg" name="img_url[]" size="30" data-state="imgfile" hidefocus="true" value="" onchange="textfield_img(this)"><input type="text" name="textfile" class="type-file-text" id="textfield" readonly=""></div></div></div><div class="item_item"><div class="label_item">{$lang.anchor_keyword}：</div><div class="label_item_value"><input type="text" name="anchor[]" class="text" value="" autocomplete="off"></div></div><div class="item_item"><div class="label_item"><span class="require-field">*</span>{$lang.since_address}：</div><div class="label_item_value"><input type="text" name="address[]" class="text" value="" autocomplete="off"></div></div><div class="item_item"><div class="label_item"><span class="require-field">*</span>{$lang.arrival_route}：</div><div class="label_item_value"><textarea name="line[]" cols="60" rows="4" class="textarea"></textarea></div></div></div>';
		$(obj).parent().before(_div);
	}
	
	/**
	*	删除新增自提
	*/
	function removePointer(obj)
	{
	   $(obj).parent().remove();
	}
	/**
	   * 删除以存在的自提点信息
	   */
	function remove_point_pro(id,msg,act)
	{
		if(confirm(msg)==true)
		{
			$.ajax({
				type:"GET",
				url:"shipping_area.php",
				data:"act="+act+"&id="+id,
				dataType:"json",
				success:function(data)
				{
					if(data['error']==2)
					{
						location.reload();
					}									
				}
			});
		}
	}
	
