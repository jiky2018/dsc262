		document.getElementById('textfield').value=i.value;
	}
	
	/**
	*	删除新增自提
	*/
	function removePointer(obj)
	{
	   $(obj).parent().remove();
	}
	
	$.levelLink();//地区三级联动
	
	
	$(function(){
		$("*[ectype='submitBtn']").click(function(){
			var district = $("input[name='district']").val();
			var shipping_area_name = $("input[name='shipping_area_name']").val();
			
			if(district == ""){
				error_div("input[name='district']","{$lang.select_jurisdiction_region}");
				return false;
			}else if(shipping_area_name == ""){
				error_div("input[name='shipping_area_name']","{$lang.continue_name_notic}");
				return false;
			}
			
			if($("form[name='theForm']").valid()){
				$("form[name='theForm']").submit();
			}
		});
	
		$("form[name='theForm']").validate({
			errorPlacement: function(error, element){
				var error_div = element.parents('div.label_item_value').find('div.form_prompt');
				error_div.siblings(".notic").hide();
				error_div.append(error);
			},
			ignore : ".ignore",
			rules : {
				'point_name[]' : {
					required : true
				},
				'user_name[]' : {
					required : true
				},
				'mobile[]' : {
					required : true,
					isTel:true
				},
				'textfile' : {
					required : true
				},
				'address[]' : {
					required : true
				},
				'line[]' : {
					required : true
				}
			},
			messages : {
				'point_name[]' : {
					required : '<i class="icon icon-exclamation-sign"></i>'+no_point_name
				},
				'user_name[]' : {
					required : '<i class="icon icon-exclamation-sign"></i>'+no_point_username
				},
				'mobile[]' : {
					required : '<i class="icon icon-exclamation-sign"></i>'+no_point_mobile,
					isTel:'<i class="icon icon-exclamation-sign"></i>'+error_point_mobile
				},
				'textfile' : {
					required : '<i class="icon icon-exclamation-sign"></i>'+file_ditu_img
				},
				'address[]' : {
					required : '<i class="icon icon-exclamation-sign"></i>'+no_point_address
				},
				'line[]' : {
					required : '<i class="icon icon-exclamation-sign"></i>'+line_required
				}
			}
		});
	});
    </script>
