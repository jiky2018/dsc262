<!doctype html>
{if $full_page}
<html>
<head>{include file ='library/admin_html_head.lbi'}</head>
<body class="iframe_body">
	<div class="warpper">
    	<div class="title">{$lang.seller} - {$ur_here}</div>
        <div class="content">
        	<div class="explanation" id="explanation">
            	<div class="ex_tit">
					<i class="sc_icon"></i><h4>{$lang.operating_hints}</h4><span id="explanationZoom" title="{$lang.fold_tips}"></span>
                    {if $open eq 1}
                    <div class="view-case">
                    	<div class="view-case-tit"><i></i>{$lang.view_tutorials}</div>
                        <div class="view-case-info">
                        	<a href="http://help.ecmoban.com/article-3330.html" target="_blank">{$lang.tutorials_bonus_list_one}</a>
                        </div>
                    </div>			
                    {/if}				
				</div>
                <ul>
                	<li>{$lang.operation_prompt_content.list.0}</li>
                    <li>{$lang.operation_prompt_content.list.1}</li>
                </ul>
            </div>
            <div class="flexilist">
                <div class="common-content">
					<div class="list-div"  id="listDiv" >
                    	{/if}
                    	<table cellpadding="1" cellspacing="1">
                        	<thead>
                            	<tr>
                                	<th><div class="tDiv">{$lang.record_id}</div></th>
                                    <th><div class="tDiv">{$lang.goods_steps_name}</div></th>
                                    <th><div class="tDiv">{$lang.site_name}</div></th>
                                    <th><div class="tDiv">{$lang.status}</div></th>
                                    <th><div class="tDiv">{$lang.valid_time}</div></th>
                                    <th class="handle">{$lang.handler}</th>
                                </tr>
                            </thead>
                            <tbody>
							    {foreach from=$pzd_list item=list name=listname}
								<td><div class="tDiv">{$list.id}</div></td>
								<td><div class="tDiv">{$list.shop_name}</div></td>
								<td><div class="tDiv">{$list.domain_name}</div></td>
								<td>
									<div class="tDiv">
										<div class="switch mauto {if $list.is_enable}active{/if}" onclick="listTable.switchBt(this, 'is_enable', {$list.id})" title="{$lang.yes}">
											<div class="circle"></div>
										</div>
										<input type="hidden" value="" name="is_enable">
									</div>
								</td>  
							    <td><div class="tDiv">{$list.validity_time}</div></td>
							    <td class="handle">
                                    <div class="tDiv a2">
                                        <a href="seller_domain.php?act=edit&id={$list.id}" title="{$lang.edit}" class="btn_edit"><i class="icon icon-edit"></i>{$lang.edit}</a>
                                        <a href="javascript:;" onclick="listTable.remove({$list.id}, '{$lang.domain_confirm}')" title="{$lang.remove}" class="btn_trash"><i class="icon icon-trash"></i>{$lang.drop}</a>
                                    </div>
								</td>
								</tr>
								{foreachelse}
								<tr><td class="no-records"  colspan="11">{$lang.no_records}</td></tr>
								{/foreach}
                            </tbody>
                            
                            <tfoot>
                            	<tr>
                                    <td colspan="12">
                                        <div class="tDiv">
                                            <div class="tfoot_btninfo">
                                                <input type="hidden" name="act" value="batch_remove" />
                                                <input type="submit" value="{$lang.drop}" name="remove" ectype="btnSubmit" class="btn btn_disabled" disabled="">
                                            </div>
                                            <div class="list-page">
                                                {include file="library/page.lbi"}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        {if $full_page}
                    </div>
                </div>
            </div>
        </div>
    </div>
	{include file ='library/pagefooter.lbi'}
{/if} 
</body>
</html>