                                                    <input type="checkbox" class="ui-checkbox" name="cou_ok_goods[]" id="gift_id2[{$key}]" value="{$goods.goods_id}" checked="checked" />
                                                    <label for="gift_id2[{$key}]" class="ui-label">{$goods.goods_name}</label>
                                                </div>
                                            {/foreach}
                                            {/if}
