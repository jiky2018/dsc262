                                        <input type="hidden" name="setcougoodsid" value="{$cou.cou_ok_goods}" class="ignore" />
                                        <div class="rank_list" id="cat_range_div2">
                                            {if $cou.ok_cat}
                                            {foreach from=$cou.ok_cat item=cat key=key}
                                            <div class="checkbox_item">
