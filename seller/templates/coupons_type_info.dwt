<script type="text/javascript">
$(function(){
	$(window).load(function(){
		var cou_type = $("input[name='cou_type']").val();
		$("*[data-value='"+cou_type+"']").click();
	});
	
	//初始显示可使用商品筛选
	$(":input[name='usableCouponGoods']").each(function(index, element) {
		
		var val = $(this).val();
		var is_true = $(this).is(":checked");
		
		if(val == 1 && is_true == true){
			$("#range_search").hide();
			$("#range_search_cat").hide();
		}else if(val == 2 && is_true == true){
			$("#range_search").show();
			$("#range_search_cat").hide();
		}else if(val == 3 && is_true == true){
			$("#range_search").hide();
			$("#range_search_cat").show();
		}
	});
	
	//初始显示可使用商品筛选
	$(":input[name='buyableCouponGoods']").each(function(index, element) {
		
		var val = $(this).val();
		var is_true = $(this).is(":checked");
		
		if(val == 1 && is_true == true){
			$("#range_search2").hide();
			$("#range_search_cat2").hide();
		}else if(val == 2 && is_true == true){
			$("#range_search2").show();
			$("#range_search_cat2").hide();
		}else if(val == 3 && is_true == true){
			$("#range_search2").hide();
			$("#range_search_cat2").show();
		}
	});
	
	$.divselect("#coupons_type","#coupons_type_val",function(){
		$("#buy").hide();
		$("#member").hide();
		$("input[name='cou_ok_user[]']").addClass("ignore");
		$("input[name='cou_user_four[]']").addClass("ignore");
		$("#cou_type").html($("#coupons_type .cite").text());
		var value = $("#coupons_type_val").val();
		if(value == 2 || value == 5){
			$("#buy").show();
			$("input[name='cou_ok_user[]']").removeClass("ignore");
			if(value == 5){
				$("#buy").find('input[name="buyableCouponGoods"]').parents('dl').hide();
				$("#buy").find('input[name="cou_get_man"]').parents('dl').hide();
			}else{
				$("#buy").find('input[name="buyableCouponGoods"]').parents('dl').show();
				$("#buy").find('input[name="cou_get_man"]').parents('dl').show();
			}
			if(value == 2){
				$("#member").hide();
				
				$("input[name='cou_user_four[]']").addClass("ignore");
			}
		}
		if(value == 4){
			$("#buy").hide();
			$("#member").show();
			
			$("input[name='cou_ok_user[]']").addClass("ignore");
					$("input[name='cou_user_four[]']").removeClass("ignore");
		}
		
		if(value == 1 || value == 2){
			$("#comm").hide();
			$("#not_comm").show();
		}else{
			$("#comm").show();
			$("#not_comm").hide();
		}
		if(value == 5){
			$("#not_free_shipping").show();
			$('[ectype="cou_money"]').hide();
			$("input[name='cou_money']").addClass("ignore");
		}else{
			$("#not_free_shipping").hide();
			$('[ectype="cou_money"]').show();
			$("input[name='cou_money']").removeClass("ignore");
		}
	});
	
	$("*[ectype='set_free_shipping']").click(function(){
		var region_ids = $("input[name='free_value']").val();
