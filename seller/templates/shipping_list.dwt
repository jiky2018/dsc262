onload = function()
{
    // 开始检查订单
    startCheckOrder();
}
{/literal}
//-->
</script>

    {insert_scripts files="jquery.purebox.js"}
    <script type="text/javascript">
    //帐号设置
    $(document).on('click', "*[ectype='account_setting']", function(){
        var id = $(this).data('id');
        $.jqueryAjax('shipping.php', 'act=account_setting&id='+id, function(data){
            var content = data.content;
            pb({
                id:"setting_dialog",
                title:'帐号设置',
                width:500,
                content:content,
                ok_title:"确定",
                cl_title:"取消",
                drag:true,
                foot:true,
                onOk:function(){
                    save_account();
                }
            });     
        })
    })
    //保存设置
    function save_account(){
        var obj = $("#setting_dialog");
    var this_data = obj.find("form").serialize();
        $.jqueryAjax('shipping.php', this_data, function(data){
      pbDialog('设置成功', '', 1);
        }, 'post')
    }

  //帐号申请
  $(document).on('click', "*[ectype='account_apply']", function(){
    var id = $(this).data('id');
    $.jqueryAjax('shipping.php', 'act=account_apply&id='+id, function(data){
      var content = data.content;
      pb({
        id:"apply_dialog",
        title:'客户号申请',
        width:700,
        content:content,
        ok_title:"确定",
        cl_title:"取消",
        drag:true,
        foot:true,
        onOk:function(){
          submit_account();
        }
      });   
    })
  })
  //提交申请
  function submit_account(){
    var obj = $("#apply_dialog");
    var this_data = obj.find("form").serialize();
    $.jqueryAjax('shipping.php', this_data, function(data){
      if(data.error == 1){
        pbDialog("提交申请失败", data.message, 0);
      }else{
        pbDialog("提交申请成功", '', 1);
      }
    }, 'post')
  }
    </script>   
</body>
</html>