                                    <td class="bdl">&nbsp;</td>
                                    <td class="tl">
                                        {if $goods.goods_id gt 0 && $goods.oi_extension_code eq 'group_buy'}
										<a href="../group_buy.php?act=view&id={$goods.extension_id}" target="_blank">
