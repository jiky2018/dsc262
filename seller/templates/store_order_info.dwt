                                        <th width="12%" class="tc">{$lang.pay_status}</th>
                                        <th width="12%" class="tc">{$lang.shipping_status}</th>
                                        <th wdith="29%" class="tc">{$lang.action_note}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {foreach from=$action_list item=action}
