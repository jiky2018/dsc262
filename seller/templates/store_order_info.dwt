                                </dl>
                                <dl>
                                    <dt>{$lang.auto_delivery_time}</dt>
                                    <dd>
                                    	<span onclick="listTable.edit(this, 'edit_auto_delivery_time', {$order.order_id})">{$order.auto_delivery_time}</span>{$lang.dateType[0]}
                                    </dd>
                                </dl>
                            </li>
                            <li>
                            	<dl>
                                    <dt>{$lang.label_shipping}</dt>
                                    <dd>
                                    {if $exist_real_goods}
