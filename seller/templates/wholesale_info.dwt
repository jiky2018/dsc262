		$("input[name='volume_number[]']").each(function(i) {
            var val = $(this).val();
			if(val == 0 || val == ""){
				$(this).addClass("error");
				$(this).parents(".special_div").siblings(".form_prompt").html('<label class="error"><i class="icon icon-exclamation-sign"></i>商品数量必须大于0</label>')
