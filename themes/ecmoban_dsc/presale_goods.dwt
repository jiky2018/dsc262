/**
 * 点选可选属性或改变数量时修改商品价格的函数
 */
function changePrice(onload)
{
  
  var qty = document.forms['ECS_FORMBUY'].elements['number'].value;

  //ecmoban模板堂 --zhuo start 限购
  if(onload != 'onload'){
	  
	  var goods_attr_id = getSelectedAttributes(document.forms['ECS_FORMBUY']);
	  $(":input[name='goods_spec']").val(goods_attr_id);
	  
	   var goods_attr = '';
	   {if $cfg.add_shop_price eq 0}
	   		var attr_id = goods_attr = getSelectedAttributesGroup(document.forms['ECS_FORMBUY']);
			goods_attr = '&goods_attr=' + attr_id;
	   {/if}
	   
	   Ajax.call('presale.php', 'act=price&id=' + goodsId + '&attr=' + goods_attr_id + goods_attr + '&number=' + qty + '&warehouse_id=' + {$region_id|default:0} + '&area_id=' + {$area_id|default:0}, changePriceResponse, 'GET', 'JSON');
  }else{
	  
	  var goods_attr_id = getSelectedAttributes(document.forms['ECS_FORMBUY']);
	  $(":input[name='goods_spec']").val(goods_attr_id);
	
	  attr = '&attr=' + goods_attr_id;
  
	  Ajax.call('presale.php', 'act=price&id=' + goodsId + attr + '&number=' + qty + '&warehouse_id=' + {$region_id|default:0} + '&area_id=' + {$area_id|default:0} + '&onload=' + onload, changePriceResponse, 'GET', 'JSON');
  }
   //ecmoban模板堂 --zhuo end 限购
}

/**
 * 接收返回的信息
 */
function changePriceResponse(res)
{
  if (res.err_msg.length > 0)
  {
    alert(res.err_msg);
  }
  else
  {
	document.forms['ECS_FORMBUY'].elements['number'].value = res.qty;
	//ecmoban模板堂 --zhuo satrt
	if(document.getElementById('ECS_SHOPPRICE')){
		if(res.onload == 'onload'){
			document.getElementById('ECS_SHOPPRICE').innerHTML = res.result;
		}else{
			if(res.show_goods == 1){
				document.getElementById('ECS_SHOPPRICE').innerHTML = res.spec_price;
			}else{
				document.getElementById('ECS_SHOPPRICE').innerHTML = res.result;
			}
		}
	}
	
	if(res.err_no == 2){
		$('#isHas_warehouse_num').html(shiping_prompt);
	}else{
            if (document.getElementById('isHas_warehouse_num')){
              var isHas;
              if(res.attr_number > 0){
                      $('a.buynow').show();
                      $('a.addcart').show();
                      $('a').remove('#quehuo');
					  
					  if(res.act_id > 0){
						  isHas = '<strong>'+json_languages.Have_goods+'</strong>，' + res.presale.str_time + json_languages.Time_delivery;
					  }else{
					  	  isHas = '<strong>'+json_languages.No_goods+'</strong>，'+json_languages.Deliver_back_order;
					  }
                      
              }else{
                    isHas = '<strong>'+json_languages.No_goods+'</strong>，'+json_languages.goods_over;
                    $('a.buynow').hide();
                    $('a.addcart').hide();
              }
              document.getElementById('isHas_warehouse_num').innerHTML = isHas;  
            }
	}
	
	$("#shipping_time").html(res.presale.str_time);
	$('.ECS_fittings_interval').html(res.shop_price);
	//ecmoban模板堂 --zhuo end			
  }
}

