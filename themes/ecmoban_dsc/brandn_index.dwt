<script type="text/javascript">
    function change_best()
    {
        var brand_id = $("#collect_brand").data('bid');
        var cat_id = '';
        $.ajax({
            async:false,
            cache:false,
            data:{id:brand_id, cat:cat_id},
            type:'POST',
            dataType:'JSON',
            url:"brandn.php?act=change_index",
            success:function(result){
                $('#change_index').html(result.content);
            }
        });
    }
    
</script>
