    <script type="text/javascript">
		//商品详情悬浮框
		goods_desc_floor();
		
		//右侧看了又看上下滚动
		$(".track_warp").slide({mainCell:".track-con ul",effect:"top",pnLoop:false,autoPlay:false,autoPage:true,prevCell:".sprite-up",nextCell:".sprite-down",vis:3});
		
		//左侧新品 热销 推荐排行切换
